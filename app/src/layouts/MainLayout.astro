---
  import MainHead from "./MainHead.astro";
  const {title} = Astro.props;
---

<html>
  <MainHead title={title}>
  </MainHead>
  <body class="bg-teal-50 font-poppins">
    <header class="w-full bg-teal-400 bg-opacity-75 backdrop-blur-sm flex flex-col items-center justify-center py-6 px-10 fixed z-100 max-sm:p-6 z-50 shadow-md transition ease-in-out delay-150 duration-500 hover:bg-opacity-90">
      <div class="max-w-[1920px] w-full flex items-center justify-between">
        <h1 class="text-2xl text-teal-700 tracking-wide max-sm:text-lg font-light hover:text-teal-700 transition ease-in-out delay-100 duration-200 active:opacity-50 max-md:active:text-teal-900"><a href="./">Rekam Medis Kesehatan</a></h1> 
        <button id="hamburger-menu" class="flex"><span class="material-symbols-outlined text-4xl text-teal-700 self-baseline max-sm:text-2xl hover:text-teal-700 transition ease-in-out delay-100 duration-200 active:opacity-50 max-md:active:text-teal-900">menu</span></button>
      </div>
      <nav class="hidden">
      <div class="max-w-[1920px] w-full flex flex-col items-center mt-5">
        <a href="./" class="mb-2 text-teal-700 text-lg text-center font-light max-sm:text-sm hover:text-teal-900 transition ease-in-out delay-100 duration-150 active:opacity-50 max-md:active:text-teal-900">Beranda</a>
        <a href="./listData" class="mb-2 text-teal-700 text-center text-lg font-light max-sm:text-sm hover:text-teal-900 transition ease-in-out delay-100 duration-150 active:opacity-50 max-md:active:text-teal-900">List Data Pasien</a>
        <a href="./addData" class="text-teal-600 text-lg text-center font-light max-sm:text-sm hover:text-teal-900 transition ease-in-out delay-100 duration-150 active:opacity-50 max-md:active:text-teal-900">Tambahkan Data Pasien</a>
      </div>
    </nav>
    </header>



    <main class="h-fit w-full flex flex-col justify-center items-center p-10 max-md:p-3">
      <slot/>
    </main>
  </body>
</html>

<script>
  let haveClicked = false;
  const hamMenu = document.querySelector("#hamburger-menu")
  hamMenu.addEventListener("click", () => {
    if (!haveClicked) {
      document.querySelector("nav").classList.remove("hidden");
      document.querySelector("nav").classList.add("flex");
      haveClicked = true;
    } else {
      document.querySelector("nav").classList.remove("flex");
      document.querySelector("nav").classList.add("hidden");
      haveClicked = false;
    }
  });

  hamMenu.addEventListener("mouseover", () => {
    document.querySelector("header").classList.remove("to-teal-400");
    document.querySelector("header").classList.add("to-teal-300");
  })
    hamMenu.addEventListener("mouseout", () => {
    document.querySelector("header").classList.remove("to-teal-300");
    document.querySelector("header").classList.add("to-teal-400");
  })
</script>